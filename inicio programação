#IF, ELISE E ELSE.
print("Bem vindo à Clinica Viver.")
febre = input("O paciente tem febre? ")

if febre == "sim":
    tosse = input("O paciente tem tosse? ")

    if tosse == "sim":
        faltaar = input("O paciente sente falta de ar? ")

        if faltaar == "sim":
            print("Suspeita de pneumonia. Procure um médico imediatamente.")
        elif faltaar == "nao":
            print("Pode ser uma gripe ou resfriado forte.")

    elif tosse == "nao":
        mancha = input("O paciente tem manchas vermelhas na pele? ")

        if mancha == "sim":
            print("Suspeita de dengue ou zika. Procure um médico.")
        elif mancha == "nao":
            print("Febre de causa indeterminada. Monitore.")

elif febre == "nao":
    dor = input("O paciente tem dor na garganta? ")


    if dor == "sim":
        print("Possível infecção de garganta. Monitore.")
    elif dor == "nao":
        print("Sintomas não conclusivos. Continue observando.")

#Outro exemplo

print("Bem vindo a companhia aérea Viagem Segura.")
mala = input("Quantas malas? ")
if mala == '1':
    print("Sem custo extra da bagagem.")
elif mala == '2':
    categoria = input("Qual a sua categoria?").lower()
    if categoria == 'prata':
        print("Custo de bagagem: 60$")
    elif categoria == 'ouro':
        print("Custo de bagagem: 0$")
    elif categoria == 'diamante':
        print("Custo de bagagem: 0$")
    elif categoria == 'nenhuma':      
        print("Custo de bagagem: 120$ ")
else:
    print("Número de malas inválido para esta simulação.")

#processamento com if else e elif

quarto = input("Qual seu tipo de quarto? ").lower()
diaria = int(input("Quantas diarias? "))
uti = input("Teve uso da UTI? ").lower()

if quarto == "particular":
    custo = 500
elif quarto == "semi particular":
    custo = 350
elif quarto == "coletivo":
    custo = 200
else:
    print("Tipo de quarto invalido.")
#processamento
total = custo * diaria
if uti == "sim":
    total += 1200
print(f'Seu custo de internação foi de: {total:,.2f}')
